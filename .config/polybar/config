[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color0:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/taskbar]
monitor = ${env:MONITOR:}
bottom = false
width = 100%:-10
height = 28
radius = 0.0
fixed-center = true

override-redirect = true
wm-restack = i3
offset-x = 5
offset-y = 5

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "UbuntuMono Nerd Font:style=Regular:size=10:antialias=true;2"

modules-left = i3 battery
modules-center = date
modules-right = cpu memory filesystem wifi

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext

[module/i3]
type = internal/i3

; Only show workspaces on the monitors they're assigned to
pin-workspaces = true

; Sort workspaces by index
index-sort = true

; Allow clicking to select a workspace
enable-click = true

; Disable scrolling (we've enabled this on the whole bar above)
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = V %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 5

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-charging =  %percentage%%
format-charging = <label-charging>

label-discharging = %percentage%%
format-discharging = <ramp-capacity> <label-discharging>

[module/date]
type = internal/date
interval = 1

date = "%a %d/%m/%Y"

time = %H:%M:%S

label = %date% %time%

[module/cpu]
type = internal/cpu
interval = 2

label =   %percentage%%

format = <label>

[module/filesystem]
type = internal/fs

mount-0 = /

label-mounted =  %used%

[module/memory]
type = internal/memory
interval = 2

label =  %gb_used%

[module/wifi]
type = internal/network

interface = wlp59s0
interval = 2

label-connected = %downspeed%

ramp-signal-0 = ""
ramp-signal-1 = ""
