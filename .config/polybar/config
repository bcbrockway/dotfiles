[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color0:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/taskbar]
bottom = true
width = 100%
height = 28
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 4

module-margin-left = 3
module-margin-right = 3

font-0 = "UbuntuMono Nerd Font:style=Bold:size=11:antialias=true;1"

modules-left = i3
modules-center = date
modules-right = cpu memory filesystem

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext

[module/i3]
type = internal/i3

; Only show workspaces on the monitors they're assigned to
pin-workspaces = true

; Sort workspaces by index
index-sort = true

; Allow clicking to select a workspace
enable-click = true

; Disable scrolling (we've enabled this on the whole bar above)
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = V %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = "%d/%m/%Y"

time = %H:%M:%S

label = %date% %time%

[module/cpu]
type = internal/cpu

format = <label>

label =   %percentage%%

[module/filesystem]
type = internal/fs

mount-0 = /

label-mounted =   %used% / %total%

[module/memory]
type = internal/memory

label =   %gb_used% / %gb_total%

