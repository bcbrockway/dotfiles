label-disconnected = xx.xx.xx.xx
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%d/%m/%Y"

time = %H:%M:%S

label = %date% %time%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 55

format = <ramp> <label>
