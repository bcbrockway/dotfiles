[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:color0:#222}
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/taskbar]
monitor = ${env:MONITOR:}
bottom = false
;width = 100%:-20
width = 100%
height = 28
radius = 0.0
fixed-center = true

override-redirect = true
wm-restack = i3
;offset-x = 10
;offset-y = 10

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "UbuntuMono Nerd Font:style=Regular:size=10:antialias=true;2"
font-1 = "源ノ角ゴシック JP:style=Regular:size=10:antialias=true;1"

modules-left = i3 battery
modules-center = time-shanghai time-rome date time-london time-chicago 
modules-right = cpu memory filesystem wifi

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext

[module/i3]
type = internal/i3

; Only show workspaces on the monitors they're assigned to
pin-workspaces = true

; Sort workspaces by index
index-sort = true

; Allow clicking to select a workspace
enable-click = true

; Disable scrolling (we've enabled this on the whole bar above)
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.primary}

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = V %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

ws-icon-0 = 1;一
ws-icon-1 = 2;二
ws-icon-2 = 3;三
ws-icon-3 = 4;四
ws-icon-4 = 5;五
ws-icon-5 = 6;六
ws-icon-6 = 7;七
ws-icon-7 = 8;八
ws-icon-8 = 9;九
ws-icon-9 = 10;十

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 5

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-full =  %percentage%%
label-charging =  %percentage%%
format-charging = <label-charging>

label-discharging = %percentage%%
format-discharging = <ramp-capacity> <label-discharging>

[module/time-shanghai]
type = custom/script
exec = TZ=Asia/Shanghai date +"SHG: %H:%M"
interval = 5

[module/time-london]
type = custom/script
exec = TZ=Europe/London date +"LON: %H:%M"
interval = 5

[module/time-rome]
type = custom/script
exec = TZ=Europe/Rome date +"ROM: %H:%M"
interval = 5

[module/time-chicago]
type = custom/script
exec = TZ=US/Central date +"CHG: %H:%M"
interval = 30

[module/date]
type = internal/date
interval = 1

date = "%d/%m/%Y"

time = %H:%M:%S

label = %date%

[module/cpu]
type = internal/cpu
interval = 2

label =   %percentage%%

format = <label>

[module/filesystem]
type = internal/fs

mount-0 = /

label-mounted =  %used%

[module/memory]
type = internal/memory
interval = 2

label =  %gb_used%

[module/wifi]
type = internal/network

interface = wlp59s0
interval = 2

label-connected = %upspeed% %downspeed%

ramp-signal-0 = ""
ramp-signal-1 = ""
