exec --no-startup-id nm-applet
exec --no-startup-id picom
exec --no-startup-id polybar taskbar
exec --no-startup-id volctl
exec --no-startup-id udiskie --tray
exec --no-startup-id "i3-msg 'workspace 2; append_layout /home/bbrockway/.config/i3/workspace-2.json'"
exec --no-startup-id firefox
#exec --no-startup-id chromium --app=https://www.flowdock.com


# Run on refresh
exec_always --no-startup-id xrdb -load ~/.Xresources
exec_always --no-startup-id feh --bg-scale ~/wallpaper/404846.jpg

